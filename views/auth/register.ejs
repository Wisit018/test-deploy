<%- include('../layout', { title: 'Register', body: `
  <div class='row justify-content-center'>
    <div class='col-12 col-md-6 col-lg-5'>
      <div class='card'>
        <div class='card-header'><strong>สมัครสมาชิก</strong></div>
        <div class='card-body'>
          ${error ? `<div class='alert alert-danger'>${error}</div>` : ''}
          <form method='post' action='/register' class='vstack gap-3'>
            <div>
              <label class='form-label'>ชื่อผู้ใช้งาน (Operator)</label>
              <input type='text' class='form-control' name='operator' value='${(values && values.operator) || ''}' required />
            </div>
            <div>
              <label class='form-label'>รหัสพนักงาน (4 หลัก)</label>
              <input type='text' class='form-control' name='pn_id' value='${(values && values.pn_id) || ''}' pattern='[0-9]{4}' inputmode='numeric' maxlength='4' required />
            </div>
            <div>
              <label class='form-label'>รหัสผ่าน (4 หลัก)</label>
              <input type='password' class='form-control' name='pass' pattern='[0-9]{4}' inputmode='numeric' maxlength='4' required />
              <div class='form-text'>กรอกตัวเลข 4 หลัก</div>
            </div>
            <div>
              <label class='form-label'>วันที่สมัคร</label>
              <input type='date' class='form-control' name='source' value='${(values && values.source) || ''}' required />
            </div>
            <div>
              <label class='form-label'>ตำแหน่งงาน</label>
              <input type='text' class='form-control' name='level' value='${(values && values.level) || 'employee'}' required />
            </div>
            <button type='submit' class='btn btn-success w-100'><i class='bi bi-person-plus me-1'></i>สมัคร</button>
          </form>
          <p class='text-center mt-3 mb-0'>มีบัญชีแล้ว? <a href='/login'>เข้าสู่ระบบ</a></p>
        </div>
      </div>
    </div>
  </div>
` }) %>
